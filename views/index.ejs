<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #f5f7fa;
            color: #333;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1200px;
        }

        .content-area {
            max-height: 100vh;
            overflow-y: auto;
        }

        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
        }

        .sidebar-title {
            font-weight: bold;
            color: #555;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .sidebar {
            position: sticky;
            top: 80px;
            height: calc(100vh - 80px);
            overflow-y: auto;
        }

        .create-post {
            background-color: #fff;
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        }

        .post-card {
            background-color: #fff;
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
            margin-bottom: 1.5rem;
        }

        .post-header {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            margin-bottom: 1rem;
        }

        .post-header img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        .post-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: #555;
        }

        .post-actions button {
            background: none;
            border: none;
            color: #007bff;
            font-size: 1.2rem;
        }

        .btn-comment,
        .btn-like {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            color: #555;
            transition: color 0.3s;
        }

        .btn-comment:hover,
        .btn-like:hover {
            color: #007bff;
        }

        .user-list img {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-right: 0.5rem;
        }
    </style>
</head>

<body>
    <%- include('partials/navbar') %>

        <div class="container mt-5">
            <div class="row">
                <!-- Sidebar Kiri: List User -->
                <div class="col-md-3 d-none d-md-block sidebar">
                    <div class="card p-3">
                        <div class="sidebar-title">User List</div>
                        <ul class="list-group list-group-flush user-list">
                            <% listUser.forEach(user=> { %>
                                <li class="list-group-item border-0 d-flex align-items-center">
                                    <img src="<%= user.profile_picture || 'https://picsum.photos/200' %>"
                                        alt="Profile picture">
                                    <a href="/<%= user.username %>" class="text-decoration-none text-muted">
                                        <%= user.username %>
                                    </a>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                </div>

                <!-- Konten Tengah: Post -->
                <div class="col-md-6 content-area">
                    <!-- Create Post Section -->
                    <% if (isLoggedin) { %>
                        <div class="create-post mb-4">
                            <h5>Create Post</h5>
                            <form action="/threads/post" method="POST">
                                <div class="mb-3">
                                    <textarea class="form-control" id="content" name="content" rows="3"
                                        placeholder="What's on your mind?" required></textarea>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" id="image" name="image"
                                        placeholder="Image URL (optional)">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Post</button>
                            </form>
                        </div>
                        <% } else { %>
                            <a href="/auth/signin" class="btn btn-outline-primary w-100 mb-4">Sign In to Post</a>
                            <% } %>

                                <div id="posts"></div>
                                <button id="loadMore" class="btn btn-primary w-100 mb-5"
                                    style="padding-right: 1.5rem;padding-left: 1.5rem;">
                                    <div class="" id="fitcontentvid">Read More</div>
                                </button>
                </div>

                <!-- Sidebar Kanan: List Hashtag -->
                <div class="col-md-3 d-none d-md-block sidebar">
                    <div class="card p-3">
                        <div class="sidebar-title">Trending Hashtags</div>
                        <ul class="list-group list-group-flush">
                            <% hashtagList.forEach(tag=> { %>
                                <li class="list-group-item border-0"><a href="/trending/tag?data=<%= tag %>"
                                        class="text-decoration-none text-muted">
                                        #<%= tag %>
                                    </a></li>
                                <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <script async src="https://www.tiktok.com/embed.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            let currentPage = 1;
            const params = new Proxy(new URLSearchParams(window.location.search), {
                get: (searchParams, prop) => searchParams.get(prop),
            });
            let value = params.content; // "some_value"
            let tag = params.data; // "some_value"
            function copy_link(text) {
                navigator.clipboard.writeText(window.location.href + "?content=" + text).then(() => {
                    alert('Link copied to clipboard!');
                }).catch((err) => {
                    console.error('Failed to copy: ', err);
                });
            }
            function loadPosts(page) {
                if (value != null) {
                    page = `${page}&content=${value}`
                }
                if (tag != null) {
                    page = `${page}&tag=${tag}`
                }
                $.ajax({
                    url: `/api/posts_following?page=${page}`,
                    method: 'GET',
                    success: function (data) {
                        const elemWidth = document.getElementById("fitcontentvid").offsetWidth;
                        const user = data?.user?.user ? data?.user?.user : undefined
                        data.data.forEach(post => {
                            $('#posts').append(`
                            <div class="post-card">
                                <div class="post-header d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="${post.user.profile_picture || 'https://picsum.photos/200'}" alt="Profile picture">
                                        <div class="ms-2">
                                            <h6 class="mb-0">
                                                <a href="/${post.user.username}" class="text-decoration-none text-dark fw-bold">
                                                    ${post.user.username}
                                                </a>
                                            </h6>
                                            <small class="text-muted">${new Date(post.createdAt).toLocaleString()}</small>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary" onclick="copy_link('${post.data}')"><i class="bi bi-link-45deg"></i>Copy</button>
                                </div>
                                <p class="card-text mb-2" id="postscreen">${post.content}</p>
                                ${post.image
                                    ? post.image.includes('youtube')
                                        ? `<iframe width="${elemWidth}" height="${elemWidth - elemWidth * 0.425}" src="${post.image}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>`
                                        : post.image.includes('tiktok')
                                            ? `<div class="tiktokwrapper"><style>.tiktokwrapper{background:#fff;position:relative}.tiktokwrapper iframe{border:0;position:relative;z-index:2}.tiktokwrapper a{color:rgba(0,0,0,0);position:absolute;left:0;top:0;z-index:0}</style><a href="https://www.fluxaiimagegenerator.net">flux</a><blockquote class="tiktok-embed"  data-video-id="${post.image.split("/").pop().split("?")[0]}" style="max-width: 325px; min-width: 325px;"><section></section></blockquote></div>`
                                            : `<img src="${post.image}" class="img-fluid" alt="Post image">`
                                    : ''
                                }
                                <div class="post-actions mt-3">
                                    <form action="${post.likes.find(like => like.user_id === (user ? user.id : null)) ? '/api/like' : '/api/like'}" method="POST" class="d-inline">
                                <input type="hidden" name="post_id" value="${post.id}">
                                <button type="submit" class="btn-like">
                                    <i class="bi ${post.likes.find(like => like.user_id === (user ? user.id : null)) ? 'bi-heart-fill text-danger' : 'bi-heart'}"></i>
                                    <span>${post.likes.length}</span>
                                </button>
                                    </form >
                                <button class="btn-comment">
                                    <i class="bi bi-chat-left"></i>
                                    <span>${post.comments.length}</span>
                                </button>
                                </div>
                                <div class="mt-3">
                                    <h6 class="text-muted">Comments</h6>
                                    ${post.comments.map(comment => `<p><strong>${comment.user.username}</strong>: ${comment.content}</p>`).join('')}
                                        <form action="/api/comment" method="POST" class="mt-2">
                                            <input type="hidden" name="post_id" value="${post.id}">
                                            <textarea class="form-control" name="content" rows="2" placeholder="Add a comment..." required></textarea>
                                            <button type="submit" class="btn btn-secondary mt-2">Comment</button>
                                        </form>
                                </div>
                            </div>
                            `);
                        });
                    }
                });
            }

            function toggleLike(postId, likeButton) {
                const url = $(likeButton).closest('form').attr('action');

                $.ajax({
                    url: url,
                    method: 'POST',
                    data: { post_id: postId },
                    success: function (response) {
                        // Update the like button icon and count
                        const isLiked = response.isLiked;
                        $(likeButton).find('i').toggleClass('bi-heart', !isLiked).toggleClass('bi-heart-fill text-danger', isLiked);
                        $(likeButton).find('span').text(response.likesCount);
                    }, error: function (err) {
                        console.log()
                        if (err.status == 401) {
                            window.location.href = "/auth/signin";
                        }
                    },
                });
            }

            // Function to handle comment submission
            function addComment(event, postId, commentForm) {
                event.preventDefault();

                $.ajax({
                    url: '/api/comment',
                    method: 'POST',
                    data: $(commentForm).serialize(),
                    success: function (response) {
                        // Append the new comment to the post's comment section
                        $(commentForm).before(`
                            <p><strong>${response.user.username}</strong>: ${response.content}</p>
                        `);
                        // Clear the textarea
                        $(commentForm).find('textarea').val('');
                    }, error: function (err) {
                        console.log()
                        if (err.status == 401) {
                            window.location.href = "/auth/signin";
                        }
                    },
                });
            }


            $(document).ready(function () {
                loadPosts(currentPage);

                $('#loadMore').click(function () {
                    currentPage++;
                    loadPosts(currentPage);
                });


                // Event delegation for like button
                $('#posts').on('click', '.btn-like', function (e) {
                    e.preventDefault();
                    const postId = $(this).closest('form').find('input[name="post_id"]').val();
                    toggleLike(postId, this);
                });

                // Event delegation for comment form submission
                $('#posts').on('submit', 'form[action="/api/comment"]', function (e) {
                    const postId = $(this).find('input[name="post_id"]').val();
                    addComment(e, postId, this);
                });
            });
        </script>
</body>

</html>