<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include('partials/navbar') %>

        <div class="container mt-5">

            <% if (isLoggedin) { %>
                <div class="card mb-3">
                    <div class="card-body">

                        <div class="container ">
                            <h1 class="mb-4">Create Post</h1>

                            <form action="/threads/post" method="POST">
                                <div class="mb-3">
                                    <label for="content" class="form-label">Post Content:</label>
                                    <textarea class="form-control" id="content" name="content" rows="4"
                                        required></textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="image" class="form-label">Image URL (optional):</label>
                                    <input type="text" class="form-control" id="image" name="image"
                                        placeholder="Image URL">
                                </div>
                                <button type="submit" class="btn btn-primary">Create Post</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } else { %>
                    <!-- Jika belum login, tampilkan tombol Sign In -->
                    <a href="/auth/signin" class="mb-3 btn btn-outline-primary">Create Post</a>
                    <% } %>


                        <!-- <h1 class="mb-4">All Posts</h1> -->

                        <% posts.forEach(post=> { %>
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/<%= post.user.username %>">
                                            <%= post.user.username %>
                                        </a>
                                    </h5>
                                    <p class="card-text">
                                        <%= post.content %>
                                    </p>
                                    <% if (post.image) { %>
                                        <img src="<%= post.image %>" class="img-fluid" alt="Post image">
                                        <% } %>
                                            <p class="card-text"><small class="text-muted">Likes: <%= post.likes.length
                                                        %></small></p>

                                            <!-- Form untuk like -->
                                            <form
                                                action="<%= post.likes.find(like => like.userId === (user ? user.id : null)) ? '/unlike' : '/like' %>"
                                                method="POST" class="d-inline">
                                                <input type="hidden" name="post_id" value="<%= post.id %>">
                                                <button type="submit"
                                                    class="btn <%= post.likes.find(like => like.userId ===  (user ? user.id : null)) ? 'btn-danger' : 'btn-outline-primary' %>">
                                                    <%= post.likes.find(like=> like.userId === (user ? user.id : null))
                                                        ? 'Unlike'
                                                        : 'Like' %>
                                                </button>
                                            </form>


                                            <!-- List komentar -->
                                            <h6 class="mt-3">Comments:</h6>
                                            <% post.comments.forEach(comment=> { %>
                                                <p><strong>
                                                        <%= comment.user.username %>
                                                    </strong>: <%= comment.content %>
                                                </p>
                                                <% }) %>

                                                    <!-- Form untuk komentar -->
                                                    <form action="/comment" method="POST">
                                                        <input type="hidden" name="post_id" value="<%= post.id %>">
                                                        <!-- Menggunakan input hidden untuk mengirim postId -->
                                                        <div class="mb-3">
                                                            <textarea class="form-control" name="content" rows="2"
                                                                required></textarea>
                                                        </div>
                                                        <button type="submit" class="btn btn-secondary">Comment</button>
                                                    </form>
                                </div>
                            </div>
                            <% }) %>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>