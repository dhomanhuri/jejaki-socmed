<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #f5f7fa;
            color: #333;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1200px;
        }

        .content-area {
            max-height: 100vh;
            overflow-y: auto;
        }

        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
        }

        .sidebar-title {
            font-weight: bold;
            color: #555;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .sidebar {
            position: sticky;
            top: 80px;
            height: calc(100vh - 80px);
            overflow-y: auto;
        }

        .create-post {
            background-color: #fff;
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        }

        .post-card {
            background-color: #fff;
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
            margin-bottom: 1.5rem;
        }

        .post-header {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            margin-bottom: 1rem;
        }

        .post-header img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        .post-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: #555;
        }

        .post-actions button {
            background: none;
            border: none;
            color: #007bff;
            font-size: 1.2rem;
        }

        .btn-comment,
        .btn-like {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            color: #555;
            transition: color 0.3s;
        }

        .btn-comment:hover,
        .btn-like:hover {
            color: #007bff;
        }

        .user-list img {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-right: 0.5rem;
        }
    </style>
</head>

<body>
    <%- include('partials/navbar') %>

        <div class="container mt-5">
            <div class="row">
                <!-- Sidebar Kiri: List User -->
                <div class="col-md-3 d-none d-md-block sidebar">
                    <div class="card p-3">
                        <div class="sidebar-title">User List</div>
                        <ul class="list-group list-group-flush user-list">
                            <% listUser.forEach(user=> { %>
                                <li class="list-group-item border-0 d-flex align-items-center">
                                    <img src="<%= user.profile_picture || 'https://picsum.photos/200' %>"
                                        alt="Profile picture">
                                    <a href="#" class="text-decoration-none text-muted">
                                        <%= user.username %>
                                    </a>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                </div>

                <!-- Konten Tengah: Post -->
                <div class="col-md-6 content-area">
                    <!-- Create Post Section -->
                    <% if (isLoggedin) { %>
                        <div class="create-post mb-4">
                            <h5>Create Post</h5>
                            <form action="/threads/post" method="POST">
                                <div class="mb-3">
                                    <textarea class="form-control" id="content" name="content" rows="3"
                                        placeholder="What's on your mind?" required></textarea>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" id="image" name="image"
                                        placeholder="Image URL (optional)">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Post</button>
                            </form>
                        </div>
                        <% } else { %>
                            <a href="/auth/signin" class="btn btn-outline-primary w-100 mb-4">Sign In to Post</a>
                            <% } %>

                                <!-- Semua Post -->
                                <% posts.forEach(post=> { %>
                                    <div class="post-card">
                                        <div class="post-header">
                                            <img src="<%= post.user.profile_picture || 'https://picsum.photos/200' %>"
                                                alt="Profile picture">
                                            <h6 class="mb-0"><a href="/<%= post.user.username %>"
                                                    class="text-decoration-none text-dark fw-bold">
                                                    <%= post.user.username %>
                                                </a></h6>
                                        </div>
                                        <p class="card-text mb-2">
                                            <%= post.content %>
                                        </p>
                                        <% if (post.image) { %>
                                            <img src="<%= post.image %>" class="img-fluid" alt="Post image">
                                            <% } %>

                                                <div class="post-actions mt-3">
                                                    <form
                                                        action="<%= post.likes.find(like => like.userId === (user ? user.id : null)) ? '/unlike' : '/like' %>"
                                                        method="POST" class="d-inline">
                                                        <input type="hidden" name="post_id" value="<%= post.id %>">
                                                        <button type="submit" class="btn-like">
                                                            <i
                                                                class="bi <%= post.likes.find(like => like.userId === (user ? user.id : null)) ? 'bi-heart-fill text-danger' : 'bi-heart' %>"></i>
                                                            <span>
                                                                <%= post.likes.length %>
                                                            </span>
                                                        </button>
                                                    </form>

                                                    <button class="btn-comment">
                                                        <i class="bi bi-chat-left"></i>
                                                        <span>
                                                            <%= post.comments.length %>
                                                        </span>
                                                    </button>
                                                </div>

                                                <!-- List Komentar -->
                                                <div class="mt-3">
                                                    <h6 class="text-muted">Comments</h6>
                                                    <% post.comments.forEach(comment=> { %>
                                                        <p><strong>
                                                                <%= comment.user.username %>
                                                            </strong>: <%= comment.content %>
                                                        </p>
                                                        <% }) %>

                                                            <form action="/comment" method="POST" class="mt-2">
                                                                <input type="hidden" name="post_id"
                                                                    value="<%= post.id %>">
                                                                <textarea class="form-control" name="content" rows="2"
                                                                    placeholder="Add a comment..." required></textarea>
                                                                <button type="submit"
                                                                    class="btn btn-secondary mt-2">Comment</button>
                                                            </form>
                                                </div>
                                    </div>
                                    <% }) %>
                </div>

                <!-- Sidebar Kanan: List Hashtag -->
                <div class="col-md-3 d-none d-md-block sidebar">
                    <div class="card p-3">
                        <div class="sidebar-title">Trending Hashtags</div>
                        <ul class="list-group list-group-flush">
                            <% ['#hashtag1', '#hashtag2' , '#hashtag3' ].forEach(tag=> { %>
                                <li class="list-group-item border-0"><a href="#"
                                        class="text-decoration-none text-muted">
                                        <%= tag %>
                                    </a></li>
                                <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>